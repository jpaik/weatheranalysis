extends layout.pug

block head
  link(rel="stylesheet", href="//cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css")

block content
  .collapse.progress
    .progress-bar.progress-bar-striped.active(role="progressbar", aria-valuenow="100", aria-valuemin="0", aria-valuemax="100", style="width:100%")
      | Loading...
  .container
    .row
      .col-md-8.col-md-offset-2
        .panel.panel-default#tablepanel
          .panel-heading
            h1 Weather Analysis Testing
          .panel-body
            h3 Analyzing Weather in NJ from 01/2014 ~ 10/2016
              span.pull-right
                button.btn.btn-primary(data-toggle="modal", data-target="#infomodal") Abbr Info
            table#welysis.table.table-hover.table-striped
              thead
                tr
                  - list = ["STN---", "WBAN", "YEARMODA", "TEMP", "", "DEWP", "", "SLP", "", "STP", "", "VISIB", "", "WDSP", "", "MXSPD", "GUST", "MAX", "MIN", "PRCP", "SNDP", "FRSHTT"]
                  each item in list
                    td= item
              tbody
        .panel.panel-default#chartpanel
          .panel-body
            h3 Plotting a chart with this data
            .chart



  .modal.fade#infomodal(tabindex="-1", role="dialog", aria-labelledby="infoModalLabel")
    .modal-dialog.modal-lg(role="document")
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-label="close")
            span(aria-hidden="true") &times;
          h4.modal-title#infoModalLabel Abbreviation Information
        .modal-body
          | Information about the abbreviations in the table header
          p
            | Created by James Paik
        .modal-footer
          button.btn.btn-default(data-dismiss="modal") Close



block scripts
  script(src="//cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js")
  script(src="//d3js.org/d3.v3.min.js")
  script(src="//labratrevenge.com/d3-tip/javascripts/d3.tip.v0.6.3.js")
  script(src="js/script.js")
